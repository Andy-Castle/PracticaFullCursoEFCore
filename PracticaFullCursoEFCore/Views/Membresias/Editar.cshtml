@model PracticaFullCursoEFCore.Models.Membresias
@{
    ViewData["Title"] = "Editar Membresias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Editar membresia</h3>
<form method="post" asp-action="Editar">

    <!--Importante para editar-->
    <input type="hidden" asp-for="ID_Membresia" />

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">

            <div class="row">
                <div class="col-4">
                    <label asp-for="TipoMembresia"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TipoMembresia" class="form-control" />
                    <span asp-validation-for="TipoMembresia" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <label asp-for="FechaInicio"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FechaInicio" class="form-control" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <label asp-for="FechaFin"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FechaFin" class="form-control" />
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <label asp-for="CostoMensual"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CostoMensual" class="form-control" />
                    <span asp-validation-for="CostoMensual" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>
    <div class="row mt-4">
        <div class="col-3">
            <a asp-action="Index">Volver a lista</a>
        </div>
        <div class="col-5 offset-4">
            <button type="submit" class="btn btn-primary form-control">Editar</button>
            &nbsp;
        </div>
    </div>
</form>