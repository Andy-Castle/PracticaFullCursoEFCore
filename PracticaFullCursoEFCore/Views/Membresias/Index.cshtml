@model IEnumerable<PracticaFullCursoEFCore.Models.Membresias>
@{
    ViewData["Title"] = "Lista de membresias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de membresias</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn-primary form-control text-decoration-none text-center">Crear Membresia</a>
    </div>

</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(m => m.TipoMembresia)</th>
                <th>@Html.DisplayNameFor(m => m.FechaInicio)</th>
                <th>@Html.DisplayNameFor(m => m.FechaFin)</th>
                <th>@Html.DisplayNameFor(m => m.CostoMensual)</th>

                <th></th>
            </tr>
            @foreach (var membresia in Model)
            {
                <tr>
                    <td>@membresia.TipoMembresia</td>
                    <td>@membresia.FechaInicio</td>
                    <td>@membresia.FechaFin</td>
                    <td>@membresia.CostoMensual</td>

                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@membresia.ID_Membresia">Editar</a>
                        @* <a class="btn btn-secondary text-white" asp-action="Detalle" asp-route-id="@membresia.ID_Membresia">Detalles</a> *@
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@membresia.ID_Membresia">Borrar</a>

                    </td>

                </tr>
            }
        </table>
    }
    else
    {
        <p>No existen membresias</p>
    }
</div>