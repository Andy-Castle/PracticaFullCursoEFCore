@model IEnumerable<PracticaFullCursoEFCore.Models.Productos>
@{
    ViewData["Title"] = "Lista de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de Productos</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn-primary form-control text-decoration-none text-center">Crear Producto</a>
    </div>

</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(p => p.Nombre)</th>
                <th>@Html.DisplayNameFor(p => p.Descripcion)</th>
                <th>@Html.DisplayNameFor(p => p.Precio)</th>

                <th></th>
            </tr>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td>$@producto.Precio</td>

                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@producto.ID_Producto">Editar</a>
                        @* <a class="btn btn-secondary text-white" asp-action="Detalle" asp-route-id="@membresia.ID_Membresia">Detalles</a> *@
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@producto.ID_Producto">Borrar</a>

                    </td>

                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay Productos</p>
    }
</div>