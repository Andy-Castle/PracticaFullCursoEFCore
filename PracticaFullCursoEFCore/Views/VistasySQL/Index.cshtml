@model IEnumerable<PracticaFullCursoEFCore.Models.VistaMembresia>

@{
    ViewData["Title"] = "Lista de membresías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de membresías</h3>
    </div>

    <div class="col-3">
        <form asp-action="Filtrar" method="get">
            <button type="submit" class="btn btn-primary">Filtrar Membresias >= $1500</button>
        </form>
    </div>

</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(m => m.TipoMembresia)</th>
                <th>@Html.DisplayNameFor(m => m.FechaInicio)</th>
                <th>@Html.DisplayNameFor(m => m.FechaFin)</th>
                <th>@Html.DisplayNameFor(m => m.CostoMensual)</th>
            </tr>
            @foreach (var membresia in Model)
            {
                <tr>
                    <td>@membresia.TipoMembresia</td>
                    <td>@membresia.FechaInicio</td>
                    <td>@membresia.FechaFin</td>
                    <td>$@membresia.CostoMensual</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No existen membresías</p>
    }
</div>
