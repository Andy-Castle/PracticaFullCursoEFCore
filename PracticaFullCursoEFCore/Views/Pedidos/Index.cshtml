@model IEnumerable<PracticaFullCursoEFCore.Models.Pedidos>
@{
    ViewData["Title"] = "Lista de Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de Pedidos</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear pedido</a>
    </div>
</div>


<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(pedido => pedido.ID_Pedido)</th>
                <th>@Html.DisplayNameFor(pedido => pedido.FechaPedido)</th>
                <th>@Html.DisplayNameFor(pedido => pedido.FechaLlegada)</th>
                <th>@Html.DisplayNameFor(pedido => pedido.Total)</th>
                <th>@Html.DisplayNameFor(pedido => pedido.Clientes)</th>
                <th></th>
            </tr>
            @foreach (var pedido in Model)
            {
                <tr>
                    <td>@pedido.ID_Pedido</td>
                    <td>@pedido.FechaPedido</td>
                    <td>@pedido.FechaLlegada</td>
                    <td>@pedido.Total</td>
                    <td>@pedido.Clientes.Nombre</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@pedido.ID_Pedido">Editar</a>
                        <a class="btn btn-success text-white" asp-action="AdministrarProductosPedidos" asp-route-id="@pedido.ID_Pedido">Administrar Productos Pedidos</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@pedido.ID_Pedido">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay Pedidos</p>
    }
</div>